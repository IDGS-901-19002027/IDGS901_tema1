@model List<IDGS901_tema1.Models.Traductor>

@{
    ViewBag.Title = "Resultados de la búsqueda";
}

<h2>Resultados de la búsqueda</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead class="bg-dark">
            <tr>
                <th class="text-white">Español</th>
                <th class="text-white">Inglés</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.espaniol</td>
                    <td>@item.ingles</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron resultados.</p>
}

<div>
    @Html.ActionLink("Regresar", "obtenerCampos")
</div>



